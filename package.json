{
  "name": "diligent-time-api",
  "version": "1.0.0",
  "description": "The API enabling millions of people to be more diligent in their use of time",
  "main": "server.js",
  "scripts": {
    "build": "rm -rf ./build/** && tsc",
    "postinstall": "npm run build",
    "start": "node ./build/src/server.js",
    "test": "mocha",
    "test:coverage": "nyc mocha",
    "watch:test": "npm test -- --watch",
    "watch:ts": "tsc -w",
    "watch:node": "nodemon build/src/server.js",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"npm run watch:ts\" \"npm run watch:node\""
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "build/",
      "coverage/"
    ],
    "reporter": [
      "html",
      "text",
      "text-lcov",
      "lcov",
      "clover"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lemmah/diligent-time-api.git"
  },
  "keywords": [
    "diligent-timer"
  ],
  "author": "James Lemayian <@lemmah>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lemmah/diligent-time-api/issues"
  },
  "homepage": "https://github.com/Lemmah/diligent-time-api#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "mongoose": "^5.3.5"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.19",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.1.0",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "engines": {
    "node": "8.12.0"
  }
}
